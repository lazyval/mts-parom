<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
        android:padding="5dp">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_rounded_white"
            android:padding="5dp"

            >
        <ImageView
                android:id="@+id/img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_debug_party"
                android:layout_marginRight="3dp"
                />
        <TextView
                android:id="@+id/label_event"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@id/img"

                android:text="@string/debug_name_date"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="#444444"
                android:paddingBottom="4dp"
                android:layout_marginTop="-3dp"
                />
        <TextView
                android:id="@+id/label_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/label_event"
                android:textSize="14dp"
                android:text="@string/debug_place"
                android:textColor="#616161"/>
        <TextView
                android:id="@+id/label_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img"
                android:layout_below="@id/label_place"
                android:textSize="14dp"
                android:text="@string/debug_place"
                android:textColor="#86ad88"
                android:drawableLeft="@drawable/icon_paluba"
                android:drawablePadding="5dp"
                />
        <TextView
                android:id="@+id/label_time_remaining"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img"
                android:layout_alignBottom="@id/img"
                android:textSize="12dp"
                android:text="@string/debug_place"
                android:textColor="#d1d2d3"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:background="@drawable/label_blue"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

</FrameLayout>